# Update Git stuff
OLDPWD=$(pwd)
cd "${GIT_STUFF}"
echo "-> Checking for console updates"
git pull --recurse-submodules > /dev/null
cd ${OLDPWD}

export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
